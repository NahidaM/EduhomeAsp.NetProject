@model Blog
@{
    ViewData["Title"] = "Create";
}

<div class="container bg-white p-5">
    <div class="row">
        <div class="col-md-12 ">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.Title">Title</label>
                        <input required asp-for="@Model.Title" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="@Model.Title"></span>
                    </div>
                </div>

                <div class="form-row">
                    @*<div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.BlogDetail">Aboute Description</label>
                        <textarea asp-for="@Model.BlogDetail"> </textarea>
                        <span class="text-danger" asp-validation-for="@Model.BlogDetail"></span>
                    </div>*@
                    <div class="form-group col-md-4 offset-md-4">
                        <label asp-for="@Model.Author">Author</label>
                        <input required asp-for="@Model.Author" class="form-control" placeholder="Author">
                        <span class="text-danger" asp-validation-for="@Model.Author"></span>
                    </div>
                </div>

                <div class="text-center mb-2">
                    <h3 class="mb-3">Add Image</h3>
                    <div class="row align-items-center bg-dark">
                        <div class="col-md-8">
                            @*<div class="custom-file my-3">
                                <input asp-for="@Model.Photo" class="custom-file-input">
                                <label asp-for="@Model.Photo" class="custom-file-label">Choose file</label>
                                <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                            </div>*@
                        </div>
                        <div class="col-md-4">
                            <img height="200" width="200" class="image-preview img-fluid my-4" />
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.WriteTime"></label>
                        <input asp-for="@Model.WriteTime" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.WriteTime"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-action="Index" class="btn btn-info">Close</a>
                </div>
            </form>
        </div>
    </div>
</div>

