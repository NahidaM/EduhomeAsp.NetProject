@model List<Teacher>
@{
ViewData["Title"] = "Index";
Layout = "~/Views/Shared/_Layout.cshtml"; 
} 

<!-- Banner Area Start -->
<partial name="_partialBanner" /> 
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="blog-title">
                    <h3>search teacher</h3>
                </div>
                <div class="course-form">
                    <form id="search" method="get" asp-action="Index">
                        <input type="search" id="searce-input" value="  @ViewData["GetTeachers"]" name="searchString" />
                        <button type="submit">search</button>
                        <a class="reply-btn btn-success" asp-action="Index">Remove Results</a>
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            @await Component.InvokeAsync("Teacher",4)
        </div>
        <div class="row mt-5 justify-content-center">
            <nav aria-label="...">
                <ul class="pagination pagination-sm">
                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        if (ViewBag.Page == i)
                        {
                            <li class="page-item disabled"><a class="page-link" href="#">@i</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" asp-controller="Teacher" asp-action="Index" asp-route-page="@i">@i</a></li>
                        }
                    }
                </ul>
            </nav>
        </div>

    </div>
</div>
<!-- Teacher End -->
