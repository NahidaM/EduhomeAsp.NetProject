@model List<Course>
@{
    ViewData["Title"] = "Course";
}

<!-- Banner Area Start -->
<partial name="_partialBanner" />
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" method="get" asp-action="Index">
                        <input type="search" id="searce-input" value="@ViewData["GetCourses"]" name="searchString" />
                        <button type="submit">search</button>
                        <a class="reply-btn btn-success" asp-action="Index">Remove Results</a>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">

            @await Component.InvokeAsync("Course", 9)

        </div>
    </div>
</div>
<!-- Course End -->
<!-- Subscribe Start -->
@await Component.InvokeAsync("Subscribe")
<!-- Subscribe End -->
